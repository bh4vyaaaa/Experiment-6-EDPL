      "source": [
        "date_str = input(\"Enter a date in dd mm yy format (e.g., 01 01 23): \")\n",
        "\n",
        "try:\n",
        "\n",
        "    parts = date_str.split()\n",
        "    if len(parts) != 3:\n",
        "        raise ValueError(\"Invalid format. Please enter dd mm yy.\")\n",
        "\n",
        "    day = int(parts[0])\n",
        "    month = int(parts[1])\n",
        "    year = int(parts[2])\n",
        "\n",
        "\n",
        "    if not (1 <= month <= 12):\n",
        "        print(\"Invalid month. Month must be between 1 and 12.\")\n",
        "    else:\n",
        "\n",
        "        if month == 2:\n",
        "            max_days = 28\n",
        "        elif month in [4, 6, 9, 11]:\n",
        "            max_days = 30\n",
        "        else:\n",
        "            max_days = 31\n",
        "\n",
        "        if not (1 <= day <= max_days):\n",
        "            print(f\"Invalid day. Day must be between 1 and {max_days} for month {month}.\")\n",
        "        else:\n",
        "            print(f\"Original date: {day:02d}/{month:02d}/{year}\")\n",
        "\n",
        "\n",
        "            next_day = day\n",
        "            next_month = month\n",
        "            next_year = year\n",
        "\n",
        "            if next_day < max_days:\n",
        "                next_day += 1\n",
        "            else:\n",
        "                next_day = 1\n",
        "                if next_month == 12:\n",
        "                    next_month = 1\n",
        "                    next_year += 1\n",
        "                else:\n",
        "                    next_month += 1\n",
        "\n",
        "            print(f\"Incremented date: {next_day:02d}/{next_month:02d}/{next_year}\")\n",
        "\n",
        "except ValueError as e:\n",
        "    print(f\"Error: {e}. Please ensure dd, mm, yy are valid numbers and the format is correct.\")"
      ],
      "execution_count": null,
      "outputs": [
        {
          "output_type": "stream",
          "name": "stdout",
          "text": [
            "Enter a date in dd mm yy format (e.g., 01 01 23): 45 78 99\n",
            "Invalid month. Month must be between 1 and 12.\n"
          ]
